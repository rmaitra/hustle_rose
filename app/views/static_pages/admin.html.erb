<h3>Listing Home Posts</h3>

<table class = "table table-striped table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @home_posts.each do |home_post| %>
      <tr>
        <td><%= home_post.title %></td>
        <td><%= home_post.description %></td>
        <td><%= link_to 'Show', home_post %></td>
        <td><%= link_to 'Edit', edit_home_post_path(home_post) %></td>
        <td><%= link_to 'Destroy', home_post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Home post', new_home_post_path %>

